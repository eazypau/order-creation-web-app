generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model OrderItem {
  id            Int         @id @default(autoincrement())
  name          String
  quantity      Int
  order         OrderList   @relation(fields: [orderId], references: [id])
  orderId       Int
}

model OrderList {
  id            Int         @id @default(autoincrement())
  customerName  String
  items         OrderItem[]
  totalPrice    Float
  status        String
  createdAt     DateTime  @default(now()) @map(name: "created_at")
  updatedAt     DateTime  @updatedAt @map(name: "updated_at")
}

model ProductList {
  id            Int         @id @default(autoincrement())
  name          String
  price         Float
  active        Boolean     @default(false)
}